<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.ForgetPasswordActivity">
    <TextView
        android:text="Quên Mật Khẩu"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_margin="24dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Nhập tên đăng nhập của bạn !"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Tên đăng nhập"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_forgetpassword"
        android:hint="account"
        android:background="@drawable/backgroud_edit_text"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_height="wrap_content">

    <TextView
        android:textSize="14sp"
        android:text="Bạn đã có mật khẩu?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14sp"
            android:text="Đăng Nhập"
            android:id="@+id/tvback_login"
            android:textColor="#32B768"
            android:paddingLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/background_button"
            android:text="Gửi"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>



</LinearLayout>