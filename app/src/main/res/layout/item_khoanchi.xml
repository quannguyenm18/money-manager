<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:elevation="4dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_item_khoanchi"
    android:layout_height="90dp">

    <ImageView
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:src="@drawable/moneykhoanchi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name_khoanchi"
            android:text="Tên Khoản Chi"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/textcolor"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/money_khoanchi"
            android:text="10,000"
            android:textColor="@color/textcolor"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_chitietKC"
            android:text="Chi tiết"
            android:layout_weight="1"
            android:textSize="14sp"
            android:background="@drawable/bg_bottomchitiet"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_khoanChi"
            android:text="Xóa"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/bg_bottomdelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>



</LinearLayout>